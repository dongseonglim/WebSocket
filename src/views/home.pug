doctype html
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        title Document
        link(rel="stylesheet", href="https://unpkg.com/mvp.css")
    body 
        header 
            h1 Zoom Rooms
        main
            div#roomlist
            div#welcome
                form
                    input.origin_name(type="text", placeholder="write your name")
                    input.room_name(placeholder="room name", required, type="text")
                    button Enter Room
            div#room
                h3
                ul 
                form#nickname
                    input(type="text", placeholder="change your name", required)
                    button Name Change
                form#msg
                    input(type="text", placeholder="message", required)
                    button Send
        //- socket.io in front-end
        script(src="/socket.io/socket.io.js")
        script(src="/public/js/app.js")